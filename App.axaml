<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="avaloniaExample.App"
             xmlns:local="using:avaloniaExample"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://avaloniaExample/Assets/Icons.axaml" />
        <StyleInclude Source="avares://avaloniaExample/Templates/ContentExample.axaml" />
    </Application.Styles>
</Application>